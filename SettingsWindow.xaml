<!-- Xaml: SettingsWindow.xaml -->
<Window x:Class="DesktopShortcutManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="设置" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">

    <StackPanel Margin="15">
        <TextBlock Text="窗口设置" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <CheckBox Content="锁定窗口位置" 
                  IsChecked="{Binding IsLocked, Mode=TwoWay}" 
                  Margin="0,5"/>

        <Grid Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="窗口不透明度:" VerticalAlignment="Center"/>
            <Slider Grid.Column="1" Minimum="20" Maximum="100" 
                    Value="{Binding OpacityValue, Mode=TwoWay}" 
                    Margin="10,0,0,0" VerticalAlignment="Center"/>
        </Grid>

        <Button Content="关闭" Width="80" HorizontalAlignment="Right" Margin="0,15,0,0"
                IsDefault="True" Click="CloseButton_Click"/>
    </StackPanel>
</Window>